
<div class="container-fluid py-4">
  <div class="row">
    <div class="row mt-4">
      <div class="col-lg-7 mb-lg-0 mb-4">
        <div class="card z-index-2 h-100">
          <div class="card-header pb-0 pt-3 bg-transparent">
            <html>
                <body>
                    <h1>LISTA DE SENSORES</h1>
                    <div class="input-group mb-3">
                        <table id="regTable" class="table table-striped table-bordered" style="width: 100%;">
                          <thead>
                            <tr>
                              <th scope="col">Nombre</th>
                              <th scope="col">Ubicacion</th>
                              <th scope="col">Tipo</th>
                              <th scope="col">Latitud</th>
                              <th scope="col">Longitud</th>
                              <th scope="col">Valor</th>
                              <th scope="col">Editar</th>
                            </tr>
                          </thead>
                          <tbody>
                            {{#each listadosensores}}
                            <tr>
                              <td>{{nombre}}</td>
                              <td>{{ubicacion}}</td>
                              <td>{{tipo}}</td>
                              <td>{{latitud}}</td>
                              <td>{{longitud}}</td>
                              <td>{{valor}}</td>
                              <td><a href="/editarSensor/{{_id}}" class="btn btn-success">Editar</a></td>
                            </tr>
                            {{else}}
                            <div class="card mx-auto">
                              <div class="card-body">
                                <h1>HOLA {{user.name}}</h1>
                                <p class="lead">Crea y adiciona tu primer sensor</p>
                                <a href="/registrarsensor" class="btn btn-success btn-block">Adicionar</a>
                              </div>
                            </div>
                            {{/each}}
                          </tbody>
                        </table>
                    </div>
                </body>
            </html>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>